[user]
	email = luiscovarrubias@bitgo.com
  name = Luis Covarrubias
  signingKey = 46252DDADA22B74B5DE77A5BC1E279ED2144EA2A # get from 'gpg --list-keys' 
[commit]
  gpgSign = true
[gpg]
  program = gpg
[alias]
  st = status
  plog = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
  exec = "!exec "
  su = submodule update --init --recursive
	pls = push --force-with-lease
  continue = "-c core.editor=true rebase --continue"
[safe]
	directory = *
[core]
	editor = nvim
	excludesfile = /Users/luiscovarrubias/.gitignore
[push]
	autoSetupRemote = true
[rerere]
	enabled = true
[diff]
	ignoreSubmodules = dirty
[absorb]
  maxStack=50
